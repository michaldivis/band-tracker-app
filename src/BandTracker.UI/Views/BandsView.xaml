<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BandTracker.UI.Views.BandsView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BandTracker.UI.Views"
    Title="Bands"
    Background="{StaticResource bBackground1}"
    Shell.NavBarIsVisible="False">

    <ContentPage.BindingContext>
        <local:BandsViewModel />
    </ContentPage.BindingContext>

    <CollectionView ItemsSource="{Binding Bands}">
        <CollectionView.Header>
            <Label
                Margin="10,20,10,0"
                Style="{StaticResource LabelH1}"
                Text="Bands" />
        </CollectionView.Header>
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame
                    Margin="10,5"
                    Padding="10"
                    Background="{StaticResource bBackground3}"
                    BorderColor="Transparent"
                    HasShadow="False">
                    <Grid ColumnDefinitions="auto,*" ColumnSpacing="10">
                        <Image
                            Grid.Column="0"
                            HeightRequest="50"
                            Source="{Binding AvatarImageUrl}"
                            WidthRequest="50">
                            <Image.Clip>
                                <RoundRectangleGeometry CornerRadius="5" Rect="0,0,50,50" />
                            </Image.Clip>
                        </Image>
                        <VerticalStackLayout Grid.Column="1">
                            <Label Text="{Binding Name}" />
                            <Label Opacity="0.5" Text="{Binding Genre}" />
                        </VerticalStackLayout>
                    </Grid>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>